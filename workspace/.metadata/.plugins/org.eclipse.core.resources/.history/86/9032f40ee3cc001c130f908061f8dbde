<title>clearInterval()</title>
<!--자바스크립트 코드 -->
<script type="text/javascript">
  window.onload = function() {
	// console.log('window.onload');  
	let bt = document.getElementById('bt');
	
	let i = 0;
	setInterval(function() {
		i++;
		alert('2초 마다 수행 : '+ i);
	}, 2000);
  };
</script>
</head>
<body>
   <h2>clearInterval()</h2>
   <hr/>
   
   <button id="bt">stop</button>
</body>
