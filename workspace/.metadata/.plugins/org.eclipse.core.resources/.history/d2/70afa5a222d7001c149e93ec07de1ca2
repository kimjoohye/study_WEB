package com.pcwk.cmn;

public class StringUtil {
	
	public final static CONTENT_UTF_8 = "text/html;charset=UTF-8";
	
	/**
	 * request null 처리 함수
	 * @param input : 입력
	 * @param replace : 치환
	 * @return String : 앞뒤 빈 공간 제거된 문자열
	 */
	public static String nvl(String input, String replace) {
		if(null == input) {
			input = replace;
		}
		
		return input.trim();
	}
}
